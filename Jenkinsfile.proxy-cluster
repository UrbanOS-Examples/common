node('master') {
    ansiColor('xterm') {
        stage('Checkout') {
            deleteDir()
            checkout scm
        }

        stage('Deploy') {
            dir('alm') {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws_jenkins_user', variable: 'AWS_ACCESS_KEY_ID']]) {
                    sh('../scripts/deploy_proxy_cluster.sh')
                }
            }
        }
    }
}
